[Unit]
Description=StreamOSC Flask App (Gunicorn + Eventlet)
After=network.target

[Service]
User=www-data
WorkingDirectory=/var/www/myapp/massdevserver
Environment="PATH=/var/www/myapp/massdevserver/venv/bin"
ExecStart=/var/www/myapp/massdevserver/venv/bin/gunicorn --worker-class eventlet -w 4 -b 0.0.0.0:80 streamosc:app
Restart=always
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target